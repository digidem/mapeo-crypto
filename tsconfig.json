{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020", "dom"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
